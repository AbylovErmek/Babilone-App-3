<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchFragment">

    <LinearLayout
        android:id="@+id/linearColumn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearColumnSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageSubtractOne"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_bishkek" />

                <LinearLayout
                    android:id="@+id/linearRowsearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/searchView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_second_bg"
                        android:gravity="center_vertical"
                        app:iconifiedByDefault="false"
                        app:queryBackground="@android:color/transparent"
                        app:queryHint="Search"
                        app:searchIcon="@drawable/img_search" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/rectangle_three_bg"
                        android:paddingHorizontal="9dp"
                        android:paddingVertical="9dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_setting"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/textView"
                style="@style/txtIntersemibold18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="24dp"
                android:layout_marginTop="17dp"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:singleLine="true"
                android:textColor="@color/black"
                tools:text="@string/lbl21" />

            <LinearLayout
                android:id="@+id/linearChips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="14dp"
                android:gravity="end"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_bg_gray"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:id="@+id/imageIconSutends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_icon"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_icon" />

                    <TextView
                        android:id="@+id/textViewSection"
                        style="@style/txtIntermedium15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:singleLine="true"
                        tools:text="Рестораны" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSection1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rectangle_bg_gray_four"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="9dp">

                    <ImageView
                        android:id="@+id/imageFirsbroomOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_fi_rs_broom_gray"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_fi_rs_broom_gray" />

                    <TextView
                        android:id="@+id/textViewSectionTwo"
                        style="@style/txtIntermedium15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:ellipsize="end"
                        android:gravity="top"
                        android:singleLine="true"
                        tools:text="Клининг" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSection2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rectangle_bg_gray_four"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:id="@+id/imageVectorOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_vector"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_vector" />

                    <TextView
                        android:id="@+id/txtSectionTwo"
                        style="@style/txtIntermedium15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:singleLine="true"
                        tools:text="Недвижемость" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSection3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="97dp"
                    android:background="@drawable/rectangle_bg_gray_four"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:id="@+id/imageVectorThree"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_vector_gray"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_vector_gray" />

                    <TextView
                        android:id="@+id/txtSectionThree"
                        style="@style/txtIntermedium15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        tools:text="Медицина" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt1"
                    style="@style/txtIntersemibold18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    tools:text="Популярное" />

                <ImageView
                    android:id="@+id/imageRight"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="top"
                    android:layout_marginStart="19dp"
                    android:layout_marginBottom="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_right_gray"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_right_gray" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRestaurantcard"
                itemSpace="@{@dimen/_16pxh}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:gravity="end"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="4"
                tools:listitem="@layout/item_restuarant_card" />

            <LinearLayout
                android:id="@+id/linearRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt2"
                    style="@style/txtIntersemibold18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    tools:text="@string/lbl29" />

                <ImageView
                    android:id="@+id/imageFirsangleThree"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="top"
                    android:layout_marginStart="210dp"
                    android:layout_marginBottom="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_right_gray"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_right_gray" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerUserprofile"
                itemSpace="@{@dimen/_15pxh}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:gravity="center_horizontal"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="5"
                tools:listitem="@layout/item_user_profile" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameBottombar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rectangle_bg_gray_50_radius_28"
            android:gravity="center_horizontal">

        </FrameLayout>
    </LinearLayout>

</ScrollView>